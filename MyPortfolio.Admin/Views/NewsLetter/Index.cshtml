@model IEnumerable<MyPortfolio.Model.Newsletter>

@{
    ViewBag.Title = "E-Bülten Aboneleri";
}

<h2>E-Bülten Aboneleri</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-sm">Yeni Abonelik</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            <a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-primary btn-sm">Düzenle</a>
            <a href="@Url.Action("Details", new {id=item.Id})" class="btn btn-dark btn-sm">Detaylar</a>
            <a href="@Url.Action("Delete", new {id=item.Id})" class="btn btn-danger btn-sm">Sil</a>
        </td>
    </tr>
}

</table>
