@model IEnumerable<MyPortfolio.Model.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Sayfalar</h2>

<p>
    @Html.ActionLink("Yeni Sayfa Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.Raw(item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>           
            <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-primary" btn-sm>Düzenle</a>
            <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger" btn-sm>Sil</a>
            <a href="@Url.Action("Details",new { id=item.Id})" class="btn btn-success" btn-sm>Ayrıntılar</a>
        </td>
    </tr>
}

</table>
