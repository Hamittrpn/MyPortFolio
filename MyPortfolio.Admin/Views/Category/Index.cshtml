@model IEnumerable<MyPortfolio.Model.Category>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2>Kategoriler</h2>

<p>
    <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni  Kategori Ekle", "Create") </button>

</p>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <button type="button"> @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) </button>
                    <button type="button">  @Html.ActionLink("DETAY", "Details", new { id = item.Id })  </button>
                    <button type="button">   @Html.ActionLink("SİL", "Delete", new { id = item.Id })  </button>


                </td>
            </tr>
        }
    </tbody>
</table>

