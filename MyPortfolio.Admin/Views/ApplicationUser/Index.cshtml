@model IEnumerable<MyPortfolio.Model.ApplicationUser>

@{
    ViewBag.Title = "Kullanıcılar";
}

<h2>Kullanıcılar</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-link">Yeni Kullanıcı Ekle</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id})" class="btn btn-primary btn-sm">Düzenle</a>
            <a href="@Url.Action("Details", new { id=item.Id})" class="btn btn-dark btn-sm">Ayrıntılar</a>
            <a href="@Url.Action("Delete", new { id=item.Id})" class="btn btn-danger btn-sm">Sil</a>
        </td>
    </tr>
}

</table>
